<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211D44"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/bgCircle_ID"
        android:layout_width="278dp"
        android:layout_height="265dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"
        app:srcCompat="@drawable/bgcircle" />

    <ImageView
        android:id="@+id/anchor_ID"
        android:layout_width="406dp"
        android:layout_height="313dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icanchor" />

    <TextView
        android:id="@+id/txtResult_ID"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="312dp"
        android:paddingLeft="35dp"
        android:paddingTop="20dp"
        android:textColor="@color/txtColor"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart_ID"
        android:layout_width="254dp"
        android:layout_height="63dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/btn_green"
        android:onClick="onClockStart"
        android:text="@string/btn_start"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStop_ID"
        android:layout_width="254dp"
        android:layout_height="63dp"
        android:layout_marginTop="552dp"
        android:text="@string/btn_end"
        android:textSize="30sp"
        android:onClick="onClickStop"
        android:background="@drawable/btn_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

